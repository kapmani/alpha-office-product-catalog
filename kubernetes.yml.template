apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: product-catalog-app
  labels:
    commit: ${WERCKER_GIT_COMMIT}
spec:
  replicas: 1
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 0
  revisionHistoryLimit: 1
  selector:
    matchLabels:
      app: product-catalog-app
  template:
    metadata:
      labels:
        app: product-catalog-app
        commit: ${WERCKER_GIT_COMMIT}
        color: green
    spec:
      containers:
      - name: product-catalog-app-container
        image: ${DOCKER_REGISTRY/mankap/}:${WERCKER_GIT_BRANCH}-${WERCKER_GIT_COMMIT}
        imagePullPolicy: Always
        ports:
        - name: pc-app-port
          containerPort: ${PORT}
          protocol: TCP
      imagePullSecrets:
        - name: ocir
---
apiVersion: v1
kind: Service
metadata:
  name: product-catalog-service
  labels:
    app: product-catalog-app
    commit: ${WERCKER_GIT_COMMIT}
spec:
  ports:
  - port: 30000
    targetPort: ${PORT}
  selector:
    app: product-catalog-app
    commit: ${WERCKER_GIT_COMMIT}
  type: LoadBalancer
---
